canvas
  position absolute
  top 0
  left 0

body
  background black
  font-family ubuntu

.menu
  width 500px
  overflow hidden
  position absolute
  margin-left -250px
  margin-top -200px
  left 50%
  top 50%
  text-align center
  background rgba(255, 255, 255, 0.8)
  box-shadow 0px 0px 50px 50px rgba(255, 255, 255, 0.8)

button
  font-size 3em
  width 400px
  border-top-left-radius 30px
  border-color black

#link
  font-size 1.5em
  width 400px
  text-align center

.menuItems
  transition all .5s
  height 150px
  margin 0
  padding 0
  overflow hidden

.mapSelect, .waitingForPartner, .loadingGame, .readyCheck, .errorMessage, .startButton, .endMessage
  height 0

.leftReadyCheck
  float left
  width 255px
  height 360px
  border-right 1px solid black

.rightReadyCheck
  float right
  width 225px
  height 360px

.readyCheckName
  font-size 3em
  font-weight bold

.toggleReady
  font-size 2em
  color gray

#countdown
  position absolute
  margin-left -50px
  margin-top -50px
  left 50%
  top 50%
  text-align center
  color #00FF04
  font-size 4em
  font-weight bold
  display none

.warning
  background orange
  border 2px dotted red
  font-size 1.2em
  cursor pointer
  display none

#outOfFocus
  background rgba(0, 0, 0, .2)
  border-radius 20px
  padding 20px
  font-size 2em
  width 800px
  text-align center
  position absolute
  margin-left -400px
  margin-top -200px
  left 50%
  top 50%
  display none